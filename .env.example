# Invoice Automation Agent Configuration
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=True
APP_NAME="Invoice Automation Agent"

# Ollama Configuration (LLM-enhanced extraction via OpenAI-compatible API)
OLLAMA_BASE_URL=http://localhost:11434/v1

# Model Settings
LLM_MODEL=llama3
LLM_TEMPERATURE=0.1

# Business Rules - Approval Thresholds (USD)
AUTO_APPROVE_THRESHOLD=5000.00
MANAGER_APPROVAL_THRESHOLD=25000.00
EXECUTIVE_APPROVAL_THRESHOLD=100000.00

# Validation Settings
DUPLICATE_CHECK_DAYS=90
TOLERANCE_PERCENTAGE=0.02

# File Processing
MAX_FILE_SIZE_MB=50

# Database (for production)
DATABASE_URL=sqlite+aiosqlite:///./data/invoices.db
